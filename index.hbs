{{!< default}}

<header class="blog-header" {{#if @blog.cover}}style="background-image: url({{@blog.cover}})"{{/if}}>
    <div class="container">
        {{#if @blog.logo}}<a class="blog-logo" href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="Blog Logo" /></a>{{/if}}
        <div class="blog-details">
            <h1 class="blog-title">{{@blog.title}}</h1>
            <h3 class="blog-description">{{@blog.description}}</h3>

            {{> nav}}

        </div>
    </div>
</header>

<section class="posts">
    <div class="container">
        {{! Each post will be output using this markup }}
        {{#foreach posts}}
            <article class="{{post_class}}">
                <header class="post-header">
                    <h2 class="post-title"><a href="{{url}}">{{{title}}}</a></h2>
                </header>
                <div class="post-excerpt">
                    {{excerpt}}&hellip; <a class="read-more" href="{{url}}">&raquo;</a>
                </div>
            </article>
        {{/foreach}}
    </div>
</section>

<section class="posts-pagination">
    <div class="container">
    {{!! After all the posts, we have the previous/next pagination links }}
    {{pagination}}
    </div>
</section>
